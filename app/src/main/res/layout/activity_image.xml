<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffff779f"
    tools:context="com.family.allinone.ImageActivity">

    <TextView android:text="ImageView\nImageButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15sp"
        android:id="@+id/textView" />

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/frameLayout">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pic1"
            android:scaleType="fitXY"
            android:padding="30dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frame"
            android:layout_centerHorizontal="true"
            android:src="@drawable/frame"
            android:scaleType="fitXY"/>
    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView"
        android:layout_below="@+id/frameLayout"
        android:paddingTop="20dp"
        android:weightSum="2"
        android:layout_alignLeft="@+id/frameLayout"
        android:layout_alignStart="@+id/frameLayout"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout"
        android:id="@+id/tableLayout">
        <TableRow
            android:layout_weight="1"
            android:weightSum="2">
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton"
                android:src="@drawable/pic1"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@android:color/white"
                android:layout_margin="10dp"
                android:layout_weight="1"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton2"
                android:src="@drawable/pic2"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:background="@android:color/white"
                android:layout_margin="10dp"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow
            android:layout_weight="1"
            android:weightSum="2">
        <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton3"
                android:padding="5dp"
                android:background="@android:color/white"
                android:src="@drawable/pic3"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:layout_weight="1"/>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageButton4"
                android:padding="5dp"
                android:background="@android:color/white"
                android:src="@drawable/pic4"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_below="@+id/tableLayout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
