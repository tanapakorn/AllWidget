<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/bg_pink_hard"
    tools:context="com.family.allinone.PhotoActivity">

    <TextView android:text="@string/photo_text_view1" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_small"
        android:id="@+id/textphotos1" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/photo_text_btn1"
        android:id="@+id/takePhotoBtn"
        android:layout_above="@+id/textphotos1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/bg_pink_hard"
        android:background="@color/btn_white_pure"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/photoView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/pic4"
        android:padding="10dp"
        android:background="@color/btn_white_pure"/>

</RelativeLayout>
