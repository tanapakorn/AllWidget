<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.family.allinone.SecondActivity"
    android:background="#ffffc7c9"
    android:gravity="center_horizontal">

    <TextView android:text="This is Second Activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff404040"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/textView10"
        android:background="#ffffffff"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name : "
        android:textColor="#ff404040"
        android:id="@+id/getNameData"
        android:textSize="20sp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#ffffffff"
        android:padding="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tel.  "
        android:textColor="#ff404040"
        android:id="@+id/getPhoneData"
        android:textSize="20sp"
        android:layout_below="@+id/getNameData"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#ffffffff"
        android:padding="10dp"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get Data From Object"
        android:id="@+id/getObjectData"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffffff"
        android:textColor="#ff404040"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Send back Data"
        android:id="@+id/sendBackData"
        android:layout_above="@+id/getObjectData"
        android:background="#ffffffff"
        android:textColor="#ff404040"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
