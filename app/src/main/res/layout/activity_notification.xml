<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffff779f"
    android:orientation="vertical"
    tools:context="com.family.allinone.NotificationActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notify User"
        android:id="@+id/notifyBtn"
        android:textAllCaps="false"
        android:background="#ffffffff"
        android:textColor="#ffff779f"
        android:textSize="20sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notify with Progress"
        android:id="@+id/notifyProgressBtn"
        android:textAllCaps="false"
        android:background="#ffffffff"
        android:textColor="#ffff779f"
        android:textSize="20sp"
        android:layout_marginTop="10dp" />
    <TextView android:text="Notification" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
